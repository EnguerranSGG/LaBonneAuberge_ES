@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}  

@model LaBonneAuberge.Models.Menu

@{
    ViewData["Title"] = "Delete";
}

<div id="form_edition">
    <h1>Suppression</h1>

    <h3>T'es sûr que tu veux liquider ce plat?</h3>
    <div><dl class="row">
        <dt class = "col-sm-2">
            Nom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Prix
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Img)
        </dd>
    </dl>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a class="link" asp-action="Index">Retour à la liste</a>
    </form>
</div>

    Layout = "~/Views/Shared/_Layout_Reservation.cshtml";
}

@{
    ViewData["Title"] = "Reservation";
}

@model LaBonneAuberge.Models.Reservation 

@if (TempData["SuccessMessage"] != null) {
<p>@TempData["SuccessMessage"]</p>
}

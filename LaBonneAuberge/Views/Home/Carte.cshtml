@{
    ViewData["Title"] = "Carte";
}


<style>
    .menu-section {
        display: none;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        $(".menu-button").on("click", function () {
            var section = $(this).data("section");
            $(".menu-section").not("." + section).slideUp();
            $("." + section).slideToggle();
        });
    });
</script>

<div class="container mt-5">
    <!-- Entête avec l'image -->
    <div class="row">
        <div class="col-md-4">
            <img src="/img/Plat2.jpg" alt="Image du restaurant" class="img-fluid">
        </div>
        <div class="col-md-8">
            <!-- Section de présentation texte -->

            <p>Le meilleur endroit pour savourer des plats délicieux et une ambiance chaleureuse.</p>
        </div>
    </div>

    <!-- Menu du jour -->
   <div class="row mt-4">
    <div class="col-md-12">
        <h3 class="mt-3 mb-4">La carte</h3>
        <ul class="list-group">
            <!-- Entrée -->
          
                        @model IEnumerable<LaBonneAuberge.Models.Category>
 @foreach (var category in Model) {
     <li class="list-group-item">
                <div class="row">
                    <div class="col-md-8">
    <h3>@category.Nom</h3>
    <ul>
        @foreach (var menu in category.Menus) {
            <li>@menu.Name</li>
        }
    </ul>
         </div>
                    
                </div>
            </li>
} 
            </ul>
        </div>
    </div>
</div>


</LaBonneAuberge.Models.Task>
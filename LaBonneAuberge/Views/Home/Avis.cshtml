@{
    ViewData["Title"] = "Avis";
}

@model IEnumerable<LaBonneAuberge.Models.FeedBackModel>

<div class="container mt-5">
    <h2 class="mb-4">Donnez-nous votre avis !</h2>
    <form>
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Adresse mail</label>
            <input type="email" class="form-control" id="inputEmail" placeholder="name@example.com (uniquement visible par le restaurant)" required>
        </div>
        <div class="mb-3">
            <label for="inputPseudo" class="form-label">Pseudo</label>
            <input type="text" class="form-control" id="inputPseudo" placeholder="Pseudo sous lequel vous apparaîtrez." required>
        </div>
        <div class="mb-3">
            <label for="inputNotation" class="form-label">Note</label>
            <input type="number" class="form-control" id="inputNotation" placeholder="Veuillez entrer une note entre 1 et 5." min="1" max="5" required>
        </div>
        <div class="mb-3">
            <label for="inputComments" class="form-label">Commentaire</label>
            <textarea class="form-control" id="inputComments" rows="4" placeholder="Rédigez votre commentaire..."></textarea>
        </div>
        <button type="submit" id="btn_feedback_form" class="btn btn-primary">Poster</button>
    </form>
</div>
<div class="Average_notation">
    <i class="lar la-star" data-value="1"></i><i class="lar la-star" data-value="2"></i><i class="lar la-star" data-value="3"></i><i class="lar la-star"data-value="4"></i><i class="lar la-star" data-value="5"></i>
    <input type="hidden" name="notation" id="notation" value="0">
</div>


<h2>Les avis de nos chers cowboys :</h2>

@foreach (var feedBack in Model)
{
    <section class="mb-3" id="feedback">
    <div class="Pseudo_Notation">
        <p>@feedBack.Pseudo_FeedBack @feedBack.Notation_FeedBack</p>
    </div>
    <div>
        <p>@feedBack.Message_FeedBack</p>
    </div>
    </section>
}

@{
    ViewData["Title"] = "Presentation";
}

<h1 id="presentation" class="mt-5">Presentation</h1>

<div class="container text-center p-5">
    <div class="row row-cols-2">
        <div class="col"><img src="~/img/presentation.jpg" alt="" class="img-fluid"
                style="max-width: 70%; height: auto;"></div>
        <div class="col p-5 " style="display: flex; justify-content: center; align-items: center; font-size: 20px">
            Bienvenue à "La Bonne Auberge", un restaurant où
            l'authenticité et la chaleur de l'ouest rencontrent la
            délicieuse saveur de la viande.
            Situé au cœur de la ville, notre établissement vous
            transporte dans l'ambiance rustique et chaleureuse d'un
            véritable repaire de cowboys. <br><br>
            Notre menu, élaboré avec passion, met en avant les
            meilleures coupes de viande, grillées à la perfection pour
            ravir vos papilles. Que vous soyez amateur de côtes de
            bœuf tendres, de steaks juteux ou de ribs fumés, "La
            Bonne Auberge" propose une sélection de plats qui
            célèbre la richesse des saveurs de la viande
        </div>
    </div>
</div>
<h1 class="m-5">A ne pas manquer ce mois-ci : </h1>
<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner  carousel-16-9">
        <div class="carousel-item active">
            <img src="~/img/Plat1.jpg" class="d-block w-100 h-30" alt="...">
            <div class="carousel-caption fade">
                <h2>Risotto Double RhumSteaks</h2>
                <h4>Le légendaire risotto aux champignons avec ses tomates cerises</h4><br>
                <p>20€</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/Plat2.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption fade">
                <h2>Poulet roti de l'Auberge</h2>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/img/Plat3.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption fade">
                <h2>Burger de la femme du Patron</h2>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>

    <!-- Ajoutez le script JavaScript Bootstrap pour gérer le survol -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var carouselItems = document.querySelectorAll('.carousel-item');

            carouselItems.forEach(function (item) {
                item.addEventListener('mouseenter', function () {
                    var caption = this.querySelector('.carousel-caption');
                    caption.classList.add('show');
                });

                item.addEventListener('mouseleave', function () {
                    var caption = this.querySelector('.carousel-caption');
                    caption.classList.remove('show');
                });
            });
        });
    </script>
</div>

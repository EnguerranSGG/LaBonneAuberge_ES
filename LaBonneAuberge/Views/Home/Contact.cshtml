@{
    ViewData["Title"] = "Contact";
}
@model LaBonneAuberge.Models.Contact

@if (TempData["SuccessMessage"] != null)
{
    <p>@TempData["SuccessMessage"]</p>
}

<style>
    .alignchoses {
        justify-content: center;
        align-items: center;
        margin-bottom: 30px;
    }
</style>
<div id="Contact"class="container mt-5 pt-5">
    <div class="row mt-5" id="Info_contact">
        <div class="col-md-4  marginContact p-5">
            <div class="mb-4 ">
                <h2 class="mb-4">Informations de Contact</h2>
                <p>Adresse: 123 Rue de l'Exemple, Ville</p>
                <p>Téléphone: +33 1 23 45 67 89</p>
                <p>Email: info@example.com</p>
            </div>
        </div>
        <div class="col-md-6 borderSimple p-5 ">
            <div>
                <div class="d-flex alignchoses">
                    <h2>Nous Contacter par Mail</h2>
                    <img src="/img/mail.webp" alt="" width="60px" height="60px" class="imghorse">
                </div>
                <form asp-action="Contact" method="post">
                    <div class="form-group">
                        <label asp-for="Email" for="email" class="mb-3 mt-3 policelabel">Adresse e-mail:</label>
                        <input asp-for="Email" type="email" class="form-control bordercolors bg-transparent" id="email" name="email"
                            placeholder="Veuillez entrez votre mail." required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" for="message" class="mb-3 mt-3 policelabel">Message:</label>
                        <textarea asp-for="Message" class="form-control bordercolors bg-transparent" id="message" name="message"
                            rows="5" placeholder="Veuillez entrez votre message..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Envoyer</button>
                </form>
            </div>
        </div>
    </div>


    <div class="row mt-5 mb-5">
        <div class="col">
            <div class="d-flex">
                <h2 class="pt-4 mb-5">Localisation</h2>
                <img src="/img/horse.gif" alt="" width="80px" height="70px" class="imghorse">
            </div>
        </div>
        <div style="overflow:hidden;resize:none;max-width:100%;width:1200px;height:350px;"><div id="google-maps-canvas" style="height:100%; width:100%;max-width:100%;"><iframe style="height:100%;width:100%;border:0;" frameborder="0" src="https://www.google.com/maps/embed/v1/place?q=Simplon+Lille,+Rue+Barthélémy+Delespaul,+Lille,+France&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"></iframe></div><a class="googlecoder" href="https://www.bootstrapskins.com/themes" id="get-data-for-embed-map">premium bootstrap themes</a><style>#google-maps-canvas img{max-width:none!important;background:none!important;font-size: inherit;font-weight:inherit;}</style></div>

    </div>
</div>

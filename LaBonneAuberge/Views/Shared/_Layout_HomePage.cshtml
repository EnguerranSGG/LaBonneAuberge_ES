<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaBonneAuberge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/avis.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/presentation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout_HomePage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LaBonneAuberge.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/6af99936d7.js" crossorigin="anonymous"></script>
</head>

<body>
    <header class="Header_HomePage">

        <nav class="navbar navbar-light">
            <div class="container-fluid justify-content-between">

                <!-- Navbar Toggler (Always visible, aligned to the left) -->
                <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
                    data-mdb-target="#navbarToggleExternalContent8" aria-controls="navbarToggleExternalContent8"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa-solid fa-burger" style="color:white;"></i>
                </button>
                <!-- Logo (Centered) -->

                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><img class="logo"
                        src="img/La_bonne_aubergelogo_1.webp" alt=""></a>

                <!-- Small Menu with 2 Links (Aligned to the right) -->
                <div class="" id="RightNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Liens réseaux</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Langues</a>
                        </li>
                    </ul>
                </div>


                <div class="collapse navbar-collapse" id="leftNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Presentation">Présentation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="color: antiquewhite;" asp-area="" asp-controller="Home"
                                asp-action="Carte">Carte
                                du moment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Réservation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Avis">Avis</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Notre
                                équipe</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Recrutement</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>


            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - LaBonneAuberge - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <section class="mb-3">
            <nav class="navbar navbar-light bg-light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
                        data-mdb-target="#navbarToggleExternalContent5" aria-controls="navbarToggleExternalContent5"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa-solid fa-burger"></i>
                    </button>
                </div>
            </nav>
            <div class="collapse" id="navbarToggleExternalContent5">
                <div class="bg-light shadow-3 p-4">
                    <button class="btn btn-link btn-block border-bottom m-0">Link 1</button>
                    <button class="btn btn-link btn-block border-bottom m-0">Link 2</button>
                    <button class="btn btn-link btn-block m-0">Link 3</button>
                </div>
            </div>
        </section>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-e4dDf2Ac6wiApFFjzDZ5v5By5uqqKj1g9p5o0eLuMOj6u6z5+bPQ5GJ6ccFV9Ur2"
        crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
